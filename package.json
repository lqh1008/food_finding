{
    "name": "food-finding",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\"",
        "dev:server": "cd server && pnpm dev",
        "dev:client": "cd client && pnpm dev",
        "install:all": "pnpm install && cd server && pnpm install && cd client && pnpm install"
    },
    "devDependencies": {
        "concurrently": "^9.1.0"
    }
}